doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='styles/main.css')
    title TicTacToe
  body
    .container
      .row
        .col-lg-6
          table#tableBoard.table.table-responsive
            tr
              td#zero.square.board-top.board-left
              td#one.square.board-top
              td#two.square.board-top.board-right
            tr
              td#three.square.board-left
              td#four.square
              td#five.square.board-right
            tr
              td#six.square.board-bottom.board-left
              td#seven.square.board-bottom
              td#eight.square.board-bottom.board-right
        .col-lg-6.winner
          canvas#results

    include partials/footer
